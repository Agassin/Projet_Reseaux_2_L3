<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Application.LoginController"
      alignment="CENTER"
      spacing="15.0"
      style="-fx-padding: 20;">

    <Label text="Connexion au Chat Sécurisé" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />

    <Button fx:id="loginButton"
            text="Se Connecter"
            onAction="#handleLogin"
            maxWidth="Infinity" />
</VBox>