<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Application.ClientController">

    <VBox spacing="10.0" style="-fx-padding: 10; -fx-border-color: lightgray; -fx-border-width: 0 1 0 0;" prefWidth="250">
        <Label text="Salons de Discussion" style="-fx-font-weight: bold;"/>
        <ListView fx:id="roomList" VBox.vgrow="ALWAYS" />
        <Button text="Créer Salon Privé" onAction="#createPrivateRoom" maxWidth="Infinity" />
    </VBox>

    <BorderPane HBox.hgrow="ALWAYS">
        <top>
            <Label fx:id="currentRoomLabel" text="Salon Actuel : Général" style="-fx-font-weight: bold; -fx-padding: 5;"/>
        </top>
        <center>
            <ListView fx:id="messageArea" BorderPane.alignment="CENTER" />
        </center>
        <bottom>
            <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                <TextField fx:id="inputField" HBox.hgrow="ALWAYS" promptText="Tapez votre message ici..." />
                <Button fx:id="sendButton" text="Envoyer" onAction="#sendMessage" />
            </HBox>
        </bottom>
    </BorderPane>
</HBox>